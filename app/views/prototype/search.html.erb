<div class="row prepend-4">
  <div class="large-12 columns">

    <h3 class="search-heading text-center">Show me people interested in</h3>
    <div class="pills text-center">
      <span class="label secondary">JavaScript</span>
    </div>

    <h4 class="search-subheading text-center">that are located in</h4>
    <div class="pills text-center">
      <span class="label secondary">Toronto</span>
      <span class="label secondary">Internetz</span>
    </div>

  </div>
</div>

<div class="search-results-container prepend-4">
</div>

<% content_for :javascripts do %>
  <script id="search-result" type="text/x-handlebars-template" charset="utf-8">
    {{#each users}}
      <div class="search-result">
        <div class="large-1 columns">
          <img src="http://placehold.it/48x48" />
        </div>
        <div class="large-8 columns">
          <div class="name">
            <a class="js-open-user-modal">{{name}}</a>
          </div>
          <div class="pills">
            {{#each topics}}
            <span class="label secondary">{{this}}</span>
            {{/each}}
          </div>
          <div class="location">{{location}}</div>
        </div>
        <div class="large-2 columns">
          <a class="button small">Request to Pair</a>
        </div>
        <div class="large-1 columns">
          <i class="icon-star-empty"></i>
        </div>
      </div>
    {{/each}}
  </script>

  <div class="large-modal-backdrop user-modal">
    <div class="large-modal">
      <div class="row append-2">
        <div class="large-1 columns">
          <a class="user-prev">
            <i class="icon-circle-arrow-left"></i>
          </a>
        </div>

        <div class="large-2 columns text-right">
          <a class="user-next">
            <i class="icon-circle-arrow-right"></i>
          </a>
        </div>
      </div>

      <div class="row">
        <div class="large-4 columns">
          <img src="https://i2.wp.com/a248.e.akamai.net/assets.github.com/images/gravatars/gravatar-user-420.png?ssl=1" />
          <h2>Ronnie Harrison</h2>
